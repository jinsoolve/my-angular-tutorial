private waitForScrollEnd(callback: () => void, delayAfterStop = 300): void {
  let lastScrollY = window.scrollY;
  let sameCount = 0;
  const threshold = 3;

  const check = () => {
    const currentY = window.scrollY;

    if (Math.abs(currentY - lastScrollY) < 2) {
      sameCount++;
    } else {
      sameCount = 0;
    }

    lastScrollY = currentY;

    if (sameCount >= threshold) {
      // 🎯 멈춘 걸 감지한 이후, 일정 시간 후에 콜백 실행
      setTimeout(() => {
        callback();
      }, delayAfterStop);
    } else {
      requestAnimationFrame(check);
    }
  };

  requestAnimationFrame(check);
}