#include <iostream>
#include <fstream>
#include <vector>
#include <string>
using namespace std;

int main() {
    vector<string> names;
    string line;

    // 표준 입력에서 이름 리스트 받기
    while (getline(cin, line)) {
        if (line.empty()) continue;
        names.push_back(line);
    }

    ofstream outfile("search-items.json");
    if (!outfile.is_open()) {
        cerr << "❌ search-items.json 파일을 열 수 없습니다." << endl;
        return 1;
    }

    outfile << "[\n";
    for (size_t i = 0; i < names.size(); ++i) {
        const string& name = names[i];
        outfile << "  {\n";
        outfile << "    \"id\": \"" << name << "\",\n";
        outfile << "    \"name\": \"" << name << "\",\n";
        outfile << "    \"route\": \"/" << name << "\"\n";
        outfile << "  }" << (i + 1 < names.size() ? "," : "") << "\n";
    }
    outfile << "]\n";

    outfile.close();
    cout << "✅ search-items.json 파일 생성 완료!" << endl;

    return 0;
}