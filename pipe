scrollToUnit(id: string, maxRetries = 10, retryDelay = 100) {
  const selector = `unit-${id}`;
  let attempts = 0;

  const tryScroll = () => {
    const el = document.querySelector(selector);
    if (el) {
      el.scrollIntoView({ behavior: 'smooth', block: 'start' });
    } else if (attempts < maxRetries) {
      attempts++;
      setTimeout(tryScroll, retryDelay);
    } else {
      console.warn(`❗️[scrollToUnit] Element '${selector}' not found after ${maxRetries} attempts`);
    }
  };

  tryScroll();
}